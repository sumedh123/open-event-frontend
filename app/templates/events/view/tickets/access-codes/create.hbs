<div class="ui stackable grid">
  <div class="row">
    <div class="ui header column">
      {{t 'Create an access code'}}
    </div>
  </div>
  <div class="row">
    <div class="sixteen wide column">
      <form class="ui form">
        <div class="field">
          <label class="required">{{t 'Access Code'}}</label>
          {{input type='text' name='access_code'}}
        </div>
        <div class="field">
          <label class="required">{{t 'Number of Access Tickets'}}</label>
          {{input type='number' name='number_of_access_tickets' value=0}}
        </div>

        <div class="grouped inline fields">
          <label class="required">{{t 'Status'}}</label>
          <div class="field">
            {{ui-radio name="status" label="Active" value="active"}}
          </div>
          <div class="field">
            {{ui-radio name="status" label="Inactive" value="inactive"}}
          </div>
        </div>
        <div class="field">
          <label class="required">{{t 'Select Tickets applied to the access code'}}</label>
          <div class="ui checkbox">
            <input type="checkbox" name="ticket_types">
            <label>{{t 'Select all Ticket types'}}</label>
          </div>
        </div>
        <div>
          <div class="inline field">
            <label>{{t 'Show more options'}}</label>
            {{ui-checkbox class='toggle' checked=showMoreOptions onChange=(action (mut showMoreOptions))}}
          </div>
          {{#if showMoreOptions}}            
            <div>
              <div>{{t 'Set the min and max quantity allowed to purchase per order(Optional)'}}</div>
              <div class="ui labeled input">
                <div class="ui label">
                  {{t 'Min'}}
                </div>
                <input type="text">
              </div>
              <div class="ui labeled input">
                <div class="ui label">
                  {{t 'Max'}}
                </div>
                <input type="text">
              </div>
            </div>
            <div class="ui hidden divider"></div>
            {{t 'Validity Period(Optional)'}}
            <div class="fields">
              <div class="wide field {{if device.isMobile 'sixteen' 'five'}}">
                <label>{{t 'Valid from'}}</label>
                {{widgets/forms/date-picker}}
              </div>
              <div class="wide field {{if device.isMobile 'sixteen' 'five'}}">
                <label>{{t 'Expires on'}}</label>
                {{widgets/forms/date-picker}}
              </div>
              <div class="ui hidden divider"></div>
            </div>
          {{/if}}
          <div class="field">
            <label>{{t 'Access Link'}}</label>
            {{input type='url' name='access_link' class='field disabled'}}
          </div>
        </div>
        <div class="ui hidden divider"></div>
        <button class="ui button">{{t 'Cancel'}}</button>
        <button class="ui primary button">{{t 'Save'}}</button>
      </form>
    </div>
  </div>
</div>
